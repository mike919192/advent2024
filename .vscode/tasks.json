{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: debug build",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I", "../include",
                "-Wall", 
                "-Wextra", 
                "-Wpedantic", 
                "-Wconversion",
                "-std=c++20"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        } ,
        {
            "type": "cppbuild",
            "label": "C/C++: release build",
            "command": "/usr/bin/g++",
            "args": [
                "${file}",
                "-O3",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I", "../include",
                "-Wall", 
                "-Wextra", 
                "-Wpedantic", 
                "-Wconversion",
                "-std=c++20"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}